<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>.net6.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>OpenCodeDev.Blazor.Foundation.Doc.Wasm</AssemblyName>
    <RootNamespace>OpenCodeDev.Blazor.Foundation.Doc.Wasm</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenCodeDev.Blazor.Foundation.Extensions" Version="[3.0.8,3.1)" allowedVersions="[3.0.8,3.1)" />
    <PackageReference Include="OpenCodeDev.Blazor.Foundation.Plugins.HighlightCS" Version="[3.0.8,3.1)" allowedVersions="[3.0.8,3.1)" />
    <PackageReference Include="System.Net.Http.Json" Version="6.*" allowedVersions="[6,7)" />
    <PackageReference Include="Newtonsoft.Json" Version="13.*" allowedVersions="[13,14)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.*" allowedVersions="[6,7)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.*" allowedVersions="[6,7)" />
  </ItemGroup>

  
  <ItemGroup>
    
    <ProjectReference Include="..\Blazor_Foundation_6_Test_Shared\OpenCodeDev.Blazor.Foundation.Doc.Core.csproj" />
    
  </ItemGroup>

  
  <ItemGroup>
    <Folder Include="Pages\" />
  </ItemGroup>



<!-- Copy Documentation to Docs Folder -->
<Target Name="MergeJS" BeforeTargets="Compile">
	<Message Text="Merging Javascripts Files" Importance="high" />
	<!-- Copy Individual Files -->
	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\foundation.min.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\foundation.js&quot;} &quot;" />

	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\jquery.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\jquery.js&quot;} &quot;" />

	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\what-input.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\what-input.js&quot;} &quot;" />
	<!-- blazor-foundation.js legacy support -->
	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\jquery.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\what-input.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\blazor-foundation.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\bf6_only.js&quot;} &quot;" />

	<!-- bf6_standard.js -->
	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\jquery.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\what-input.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\foundation.min.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\blazor-foundation.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\bf6_standard.js&quot;} &quot;" />
	<!-- bf6_only.js -->
	<Exec Command="powershell.exe –NonInteractive –ExecutionPolicy Unrestricted -Command &quot;&amp; { Get-Content &quot;$(ProjectDir)_JS\src\jquery.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\what-input.js&quot;, &quot;$(ProjectDir)_JS\src\newline.js&quot;, &quot;$(ProjectDir)_JS\src\blazor-foundation.js&quot; | Set-Content &quot;$(ProjectDir)wwwroot\js\bf6_only.js&quot;} &quot;" />

</Target>
</Project>
