<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;.net5.0;.net6.0</TargetFrameworks>
    <RazorLangVersion>3.0</RazorLangVersion>
    <PackageId>OpenCodeDev.Blazor.Foundation.Doc.Core</PackageId>
    <AssemblyName>OpenCodeDev.Blazor.Foundation.Doc.Core</AssemblyName>
    <RootNamespace>OpenCodeDev.Blazor.Foundation.Doc.Core</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>OpenCodeDev</Company>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.1|AnyCPU'">
    <OutputPath>..\..\..\packages\Blazor_Foundation_6_Doc_Core</OutputPath>
    <WarningLevel>3</WarningLevel>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="OpenCodeDev.Blazor.Foundation.Extensions" Version="1.*" />
    <PackageReference Include="OpenCodeDev.Blazor.Foundation.Plugins.HighlightCS" Version="1.*" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.*" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net5.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="5.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.*" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.*" />
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\Blazor_Foundation_6_Lib\OpenCodeDev.Blazor.Foundation.csproj" />
  </ItemGroup>


  <ItemGroup>
    <Folder Include="wwwroot\images\" />
  </ItemGroup>

</Project>
