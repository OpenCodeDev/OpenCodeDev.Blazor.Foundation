            </ul>

        </OpenCodeDev.Blazor.Foundation.Components.Containers.OffCanvas>

        <OpenCodeDev.Blazor.Foundation.Components.Containers.OffCanvasContent>
            <!-- Your page content lives here -->
        </OpenCodeDev.Blazor.Foundation.Components.Containers.OffCanvasContent>
        <hr />
    </SectionLeft>
</SectionWrapper>
<SectionWrapper>
