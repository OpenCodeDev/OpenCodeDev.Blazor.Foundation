                     Content="" />

        <Button DataToggle="offCanvas">Open Menu</Button>
        <OpenCodeDev.Blazor.Foundation.Components.Containers.OffCanvas Position="position-left" Id="offCanvas">

            <!-- Close button -->
            <Button Class="close-button">
                <span aria-hidden="true">&times;</span>
            </Button>

            <!-- Menu -->
            <ul class="vertical menu">
