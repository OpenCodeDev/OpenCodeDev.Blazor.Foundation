@page "/progress-bar";
@using OpenCodeDev.Blazor.Foundation.Doc.Core.Components.Containers.Section;
@using OpenCodeDev.Blazor.Foundation.Components.Containers;
<SectionWrapper>
    <SectionLeft>
        <h3>Progress Bar</h3>
        <p>Progress Bar use a single component <Code>@("<ProgressBar>")</Code>.</p>

        <hr />
    </SectionLeft>
</SectionWrapper>

<SectionWrapper>
    <SectionLeft>
        <h3>Colors</h3>
        <p>
            You can change the color via a class. We have default classes
            <Code>@(@"ColorClass=""primary""")</Code>, <Code>@(@"ColorClass=""secondary""")</Code>, <Code>@(@"ColorClass=""success""")</Code>,
            <Code>@(@"ColorClass=""warning""")</Code>, <Code>@(@"ColorClass=""alert""")</Code>.
        </p>
        <HighlightCS Language="html" Full="true" HeaderIcon="mdi-language-html5" HeaderBGcolor="#5d2b90" HeaderTitle="Razor"
                     Content="" />
<ProgressBar ColorClass="primary" Progress="22.53f" />
<ProgressBar ColorClass="secondary" Progress="32.52f" />
<ProgressBar ColorClass="success" Progress="56.2f" />
<ProgressBar ColorClass="warning" Progress="85f" />
<ProgressBar ColorClass="alert" Progress="98f" />

        <h3>Text</h3>
        <p>You can choose to show % text by using the attribute <Code>@(@"ShowText=""true""")</Code></p>
        <HighlightCS Language="html" Full="true" HeaderIcon="mdi-language-html5" HeaderBGcolor="#5d2b90" HeaderTitle="Razor"
                     Content="" />
<ProgressBar ColorClass="secondary" Progress="25f" ShowText="true" />
<ProgressBar ColorClass="secondary" Progress="50f" ShowText="true" />
<ProgressBar ColorClass="secondary" Progress="75f" ShowText="true" />
<ProgressBar ColorClass="secondary" Progress="100f" ShowText="true" />
        <hr />
    </SectionLeft>
</SectionWrapper>
