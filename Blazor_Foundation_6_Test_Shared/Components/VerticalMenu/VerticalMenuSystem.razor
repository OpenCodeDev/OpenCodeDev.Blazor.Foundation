<StickyContainer Class="VerticalNavContainer" data-sticky-class="sticky VerticalNavContainerSticky" data-margin-top="0" data-anchor="body-container" data-stick-to="top" data-check-every="0">

    <nav class="VerticalNavWrapper">
        <div class="VeticalNavLogo">
            <BlazorFoundationLogo IsLoader="false" Scale="1"  />
            @* <svg focusable="true" role="img" aria-hidden="false" viewBox="0 0 498.27 552.11" size="42" type="flyingS" fill="white"><title id="Scotiabank-title">Scotiabank</title><path d="M637.94,371.45H481.69A173.16,173.16,0,0,0,309.61,525.34h0A173.18,173.18,0,0,1,461.19,268.53H730.82Z" transform="translate(-232.55 -268.53)"></path><path d="M325.43,717.72H481.69A173.15,173.15,0,0,0,653.76,563.83h0A173.18,173.18,0,0,1,502.18,820.64H232.55Z" transform="translate(-232.55 -268.53)"></path><circle cx="249.14" cy="276.05" r="139.06"></circle></svg> *@
        </div>
        @if (SubMenuLevel.Count > 0)
        {
            <div>
                <Breadcrumb>
                    <BreadcrumbItem><NavLink>@MainLevelName</NavLink></BreadcrumbItem>
                    @for (int i = SubMenuLevel.Count -1; i > 0; i--) {
                        <BreadcrumbItem><NavLink>@SubMenuLevel.ElementAt(1).Name</NavLink></BreadcrumbItem>
                    }
                </Breadcrumb>
            </div>
        }

        <ul class="VeticalNavList">
            @if (SubMenuLevel.Count > 0)
            {
                @foreach (var item in SubMenuLevel.Peek().SubMenus)
                {
                    <VerticalMenuSystemItem IsLoading=@IsBusy Item=@item OnClickItem=@OnElementClick />
                }
            }else
            {
                @foreach (var item in Items)
                {
                    <VerticalMenuSystemItem IsLoading=@IsBusy Item=@item OnClickItem=@OnElementClick />
                }
            }

        </ul>
    </nav>
                    
</StickyContainer>